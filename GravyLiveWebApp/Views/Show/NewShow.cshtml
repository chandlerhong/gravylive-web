@model GravyLiveWebApp.WebApp.Models.NewShowModel
@{
    ViewBag.Title = "New Show";
}

<h2>Create a New Show</h2>

@using (Html.BeginForm("CreateShow", "Show", FormMethod.Post))
{
<div class="form-horizontal">

    <!--START of Show Date form field -->
    <form>
        <div>
            <label for="show">Choose your preferred show date:</label>
            <input type="date" id="show" name="Show_Date" min="" max="">
        </div>
    </form>
    <!--END of Show Date form field -->

    <!--START of Product form field -->
    <div class="form-group">
        <label for="lstProduct" class="col-sm-2 control-label">Product:</label>
        <div class="col-sm-10">
            <select id="lstProduct" class="form-control" name="Product_ID" size="7">
                @foreach (var product in Model.Products)
                {
                <option value="@product.Product_ID">@product.Description</option>
                }
            </select>
        </div>
    </div>
    <!--END of Product form field -->

    <!--START of Starting Price form field -->
    <div class="form-group">
        <label for="txtStartingPrice" class="col-sm-2 control-label">Starting Price:</label>
        <div class="col-sm-10">
            <input id="txtStartingPrice" name="Start_Price" type="text" placeholder="$00000" class="form-control" />
        </div>
    </div>
    <!--END of Starting Price form field -->

    <!--START of Product Units form field -->
    <div class="form-group">
        <label for="txtProductUnit" class="col-sm-2 control-label">Product Units:</label>
        <div class="col-sm-10">
            <input id="txtProductUnits" name="Product_Units" type="text" placeholder="00" class="form-control" />
        </div>
    </div>
    <!--END of Product Units form field -->

    <!--START of Unit Cost form field -->
    <div class="form-group">
        <label for="txtUnitCost" class="col-sm-2 control-label">Unit Cost:</label>
        <div class="col-sm-10">
            <input id="txtUnitCost" name="Unit_Cost" type="text" placeholder="$00000" class="form-control" />
        </div>
    </div>

    <!--END of Unit Cost form field -->

    <!-- START Submit button-->
    <div class="form-group">
        <div class="col-md-offset-2 col-md-2 col-lg-1">
            <button type="submit" class="btn btn-primary">Create Show</button>
        </div>
        <div class="col-md-offset-1 col-md-2 col-lg-1">
            <button type="submit" class="btn btn-default">Cancel</button>
        </div>
    </div>
    <!-- END Submit button-->
</div>
}
